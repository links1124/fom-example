<?xml version="1.0" encoding="UTF-8"?>
<foms>
	<fom name="example7" config="com.fom.defaulter.HdfsZipDownloaderConfig">
		<remark>下载并打包hdfs上指定目录下的目录</remark>
		<src.uri>/test</src.uri>
		<src.pattern></src.pattern>
		<src.delMatchFail>false</src.delMatchFail>
		<scanner>com.fom.context.scanner.HdfsScanner</scanner>
		<scanner.cron>0 0/15 * * * ?</scanner.cron>
		<context>com.fom.defaulter.HdfsDownloader</context>
		<thread.min>10</thread.min>
		<thread.max>10</thread.max>
		<thread.aliveTime>30</thread.aliveTime>
		<thread.overTime>86400</thread.overTime>
		<thread.cancellable>false</thread.cancellable>
		<extends>
			<hdfs.master>master.ip:port</hdfs.master>
			<hdfs.slave>slave.ip:port</hdfs.slave>
			<hdfs.signalFile>a.orc</hdfs.signalFile>
			<downloader.isSrcDel>false</downloader.isSrcDel>
			<downloader.isWithTemp>true</downloader.isWithTemp>
			<downloader.desPath>${webapp.root}/download</downloader.desPath>
			<downloader.zip.entryMax>100</downloader.zip.entryMax>
			<downloader.zip.sizeMax>5M</downloader.zip.sizeMax>
		</extends>
	</fom>
</foms>